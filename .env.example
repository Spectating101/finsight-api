# FinSight API Configuration

# Database
DATABASE_URL=postgresql://localhost/finsight_production
DATABASE_POOL_SIZE=20

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Stripe (for billing)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Data Source APIs
SEC_USER_AGENT="FinSight API/1.0 (contact@finsight.io)"
ALPHA_VANTAGE_API_KEY=your_key_here
YAHOO_FINANCE_TIMEOUT=30

# LLM Providers (for AI synthesis)
GROQ_API_KEY=gsk_xxx
CEREBRAS_API_KEY=csk_xxx
OPENROUTER_API_KEY=sk_xxx

# Security
JWT_SECRET_KEY=generate_random_secret_here
API_KEY_SALT=generate_random_salt_here

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Rate Limits (requests per minute)
RATE_LIMIT_FREE=10
RATE_LIMIT_STARTER=50
RATE_LIMIT_PRO=200
RATE_LIMIT_ENTERPRISE=1000

# Monitoring
SENTRY_DSN=https://xxx@sentry.io/xxx
